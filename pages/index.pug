extends main

block head
    link(rel="stylesheet", href="../css/home.css")
    title Home

block postNav
    .main-header 
        .treding-header
            .treding-episode 
                img(src="../img/header/linea.png")
                p Trending Episode 
            .treding-h1__lorem 
                h1 Dreams of an unique ideas scattered through a deserted.
                p Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.
            .play 
                img(src="../img/header/play.png")
            .listen-on 
                p Listen On Also
                img(src="../img/header/linea.png")
            .apps 
                .spotify 
                    img(src="../img/header/spotify.png")
                    .spotify-text 
                        p Listen on 
                        span spotify
                .podcast 
                    img(src="../img/header/podcast.png")
                    .podcast-text 
                        p Listen on
                        span Google Podcasts 
                .apple 
                    img(src="../img/header/app.png")
                    .apple-text 
                        p Listen on 
                        span Apple Podcasts
        .people-header 
            img(src="../img/header/people.png")

block body
    section 
        .container 
            .episode
                .episode-title 
                    h2 Latest Podcast Episodes
                    p View All
                .episode-items 
                    for item, indice in podcasts
                        +episode(item, podcastsTitle[indice])
                .episode-show 
                    span Show More Episode

    article.blog_posts
        .container
            .title 
                h3 Blog Posts 
            .blog-items 
                for blog in tituloblog
                    +blog (blog)
            .blog-flecha 
                img(src="../img/blog/left.png")
                img(src="../img/blog/right.png")
    .gallery 
        .container 
            .gallery-items 
                .gallery-text 
                    h2 Instagram feeds
                .gallery-photo 
                    for gallery in galleryitems 
                        .gallery-photo__container 
                            img.photo-container__grid(src=gallery)
                            .gallery-photo-container__grid-llave
                                img(src="../img/gallery/llave.png")